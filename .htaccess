Options -Indexes

DirectoryIndex  index.php

AddDefaultCharset utf-8

RewriteEngine On

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

RewriteRule ^([^/]*)$ category.php?menu_id=$1 [QSA]
RewriteRule ^([^/]*)/$ category.php?menu_id=$1 [QSA]

RewriteRule ^([^/]*)/([^/]*)$ article.php?menu_id=$1&id=$2 [QSA]
RewriteRule ^([^/]*)/([^/]*)/$ article.php?menu_id=$1&id=$2 [QSA]

<Files .htaccess>
    order allow,deny
    deny from all
</Files>